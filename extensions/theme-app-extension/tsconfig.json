{
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ES2022"],
    "target": "ES2022",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["extensions/**/*"],
  "exclude": ["node_modules"]
}

